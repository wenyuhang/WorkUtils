<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activitys.TestsActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="but"
        android:text="点击"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_test"

        />

    <com.wl.workutils.widget.MyView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/red_a_color"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/yellow_a_color"
                />
            <com.wl.workutils.widget.MyTvView
                android:onClick="tv_green"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/green_c_color"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/violet_a_color"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/red_a_color"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/yellow_a_color"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/green_c_color"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/violet_a_color"
                />
        </LinearLayout>

    </com.wl.workutils.widget.MyView>

</LinearLayout>